package Editora;

import java.sql.Date;

public class Publicacao {
	private String nome;
	private int edicaoAtual;
	private String periodic;
	private Date ultimaPub;
	
	public String getNome() {
		return nome;
	}
	
	public void setNome(String nome) {
		this.nome = nome;
	}
	
	public int getEdicaoAtual() {
		return edicaoAtual;
	}
	
	public void setEdicaoAtual(int edicao) {
		this.edicaoAtual = edicao;
	}
	
	public void atualizaEdicao() {
		this.edicaoAtual++ ;
	}

	public String getPeriodic() {
		return periodic;
	}
	
	public int setPeriodic(String periodic) {
		if (periodic  == "Semanal" || periodic  == "Mensal" || periodic  == "Quinzenal") {
			this.periodic = periodic;
			return 1;
		} else {
			System.out.println("Periodicidade inválida");
			return -1;
		}
	}

	public Date getUltimaPub() {
		return ultimaPub;
	}

	public void setUltimaPub(Date ultimaPub) {
		this.ultimaPub = ultimaPub;
	}

	
}
